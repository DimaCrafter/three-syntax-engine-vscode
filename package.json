{
	"name": "twostrokejs-syntax",
	"displayName": "TwoStroke.js Syntax Rules",
	"description": "TwoStroke.js Syntax Rules file support",
	"icon": "img/logo.png",
	"preview": true,
	"publisher": "DimaCrafter",
	"author": {
		"name": "Dmitriy Shiryaev",
		"email": "backup.dimacrafter@gmail.com"
	},
	"repository": "https://github.com/DimaCrafter/twostrokejs-syntax.git",
	"license": "MIT",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
        "onLanguage:twostrokejs-syntax"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "twostrokejs-syntax",
				"aliases": ["TwoStroke.js Syntax Rules", "tss"],
				"extensions": [".tss"],
				"configuration": "./syntaxes/tss.config.json"
			}
		],
		"grammars": [
			{
				"language": "twostrokejs-syntax",
				"scopeName": "source.twostrokejs-syntax",
				"path": "./syntaxes/tss.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
